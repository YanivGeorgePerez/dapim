<h1><%= profileUser %>'s Profile</h1>

<h2>Pastes</h2>
<% if (pastes.length > 0) { %>
  <ul class="profile-pastes">
    <% pastes.forEach(p => { %>
      <li>
         <a href="/paste/<%= p.id %>"><%= p.title %></a>
         <small>â€” created on <%= p.createdAt.toLocaleString() %></small>
      </li>
    <% }); %>
  </ul>
<% } else { %>
  <p>No pastes found.</p>
<% } %>

