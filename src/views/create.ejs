<h1>Create a New Paste</h1>
<form method="POST" action="/create" class="auth-form">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" placeholder="Paste title" required>
  
  <label for="content">Content:</label>
  <textarea name="content" id="content" rows="10" placeholder="Enter your paste content here..." required></textarea>
  
  <div class="g-recaptcha" data-sitekey="<%= recaptchaSiteKey %>"></div>
  <button type="submit">Create Paste</button>
</form>

<!-- Load the ReCAPTCHA API script -->
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
